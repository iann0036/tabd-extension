{
  "manifest_version": 3,
  "name": "Tab'd",
  "version": "1.0.0",
  "description": "Detect clipboard operations and communicate with VS Code extension",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "32": "icons/tabd_logo_32.png",
    "128": "icons/tabd_logo_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://github.com/*/*"],
      "js": ["github-pr.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tabd-injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
