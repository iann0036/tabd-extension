{
  "manifest_version": 3,
  "name": "Tab'd",
  "version": "0.0.4",
  "description": "Detect clipboard operations and communicate with VS Code extension",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "nativeMessaging",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/tabd_logo_16.png",
    "32": "icons/tabd_logo_32.png",
    "48": "icons/tabd_logo_48.png",
    "128": "icons/tabd_logo_128.png"
  },
  "action": {
    "default_popup": "",
    "default_title": "Tab'd Options"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://github.com/*/*"],
      "js": ["github-pr.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tabd-injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
