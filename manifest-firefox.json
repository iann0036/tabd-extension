{
  "manifest_version": 3,
  "name": "Tab'd",
  "version": "0.0.6",
  "description": "Detect clipboard operations and communicate with IDE extension",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "nativeMessaging",
    "storage",
    "scripting"
  ],
  "license": "AGPL-3.0-only",
  "homepage_url": "https://github.com/iann0036/tabd#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/iann0036/tabd-extension"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/tabd_logo_16.png",
    "32": "icons/tabd_logo_32.png",
    "48": "icons/tabd_logo_48.png",
    "128": "icons/tabd_logo_128.png"
  },
  "action": {
    "default_popup": "",
    "default_title": "Tab'd Options"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://github.com/*/*"],
      "js": ["github-pr.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tabd-injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "tabd-extension-moz@ian.mn"
    }
  }
}
